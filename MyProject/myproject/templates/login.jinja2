    <body>


      <div class = "authentication">
        <section class="loginform cf">
          <form name="login" action="{{url}}" method="post" accept-charset="utf-8">
            <ul>
             <li><label for="login">Email</label>
              <input type="email" name="login" placeholder="yourname@email.com" required value="{{login}}"></li>
              <li><label for="password">Пароль</label>
               <input type="password" name="password" placeholder="password" required value="{{password}}"></li>
               <div> 
                 <input type="submit" value="Войти" name="form.submitted" method="get">
                 <a class="button" href="{{main_url}}/registration">Регистрация</a>
               </div>
             </ul>
           </form>
         </section>
       </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
