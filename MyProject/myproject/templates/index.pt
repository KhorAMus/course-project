<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>World Of Tanks</title>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script type="text/javascript" src= "${request.static_url('myproject:static/js/tank.js')}"></script>
  <script type="text/javascript" src= "${request.static_url('myproject:static/js/game.js')}"></script>
  <script type="text/javascript" src= "${request.static_url('myproject:static/js/bullet.js')}"></script>
  <script type="text/javascript" src= "${request.static_url('myproject:static/js/Vectors.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/map.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/boundingBox.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/cooldown.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/block.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/lives.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/score.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/explosion.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/aftershot.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/Upgrade.js')}"></script>
  <script type="text/javascript" src="${request.static_url('myproject:static/js/base.js')}"></script>

  <script type="text/javascript" src="${request.static_url('myproject:static/js/jquery.keyboard.js')}"></script>



</head>

<body>
<table width="100%" cellspacing="0" cellpadding="5">
   <tr>
		<td width="500px" valign="top" >
			<div id="gameGame" style="text-align:  center;" >
				<font size="6" face="Arial">Game</font>
			</div>
			<canvas id="game" height='500px' width='500px' style="border: 3px solid black;" ></canvas>
		</td>
		<td valign="top"  >
			<div id="gameState" style="text-align:  center;">  <font size="6" face="Arial">State</font>   </div>
			<div id="gameStateLevels">  Levels
				<form method = "post">
					<input id="gameStateLevelsInput" style="width: 100px; height: 20px;">  </input>
					<button id="gameStateLevelsGo" style="height: 20px; vertical-align: middle;" > Go! </button>
				</form>
			</div>
			<div id="gameStateTanksCount"> Tanks count </div>
			<br>

			<div id="gameStatePlayer1"> Player 1 </div>
			<div id="gameStatePlayer1Lives"> Lives count</div>
			<div id="gameStatePlayer1Score"> Score count</div>
      <div id="gameStatePlayer1Fired"> Fired count</div>
			<br>

			<div id="gameStatePlayer2"> Player 2 </div>
			<div id="gameStatePlayer2Lives"> Lives count</div>
			<div id="gameStatePlayer2Score"> Score count</div>
      <div id="gameStatePlayer2Fired"> Fired count</div>
		</td>
   </tr>
</table>


</body>
</html>
